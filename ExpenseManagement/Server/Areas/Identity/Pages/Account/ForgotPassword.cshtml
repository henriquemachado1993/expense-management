@page
@model ForgotPasswordModel
@{
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh">
    <div class="d-flex flex-column justify-content-between">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-10">
                <div class="card card-default mb-0">
                    <div class="card-header pb-0">
                        <div class="app-brand w-100 d-flex justify-content-center border-bottom-0">
                            <a class="w-auto pl-0" href="/">
                                <img src="~/images/logo.png" alt="Gerênciamento de despesas">
                                <span class="brand-name text-dark">GERÊNCIA DE DESPESAS</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-body px-5 pb-5 pt-0">

                        <h4 class="text-dark mb-6 text-center">Esqueceu sua senha? Digite seu E-mail</h4>

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Input.Email" type="email" class="form-control input-lg" id="email" aria-describedby="emailHelp" autocomplete="username"
                                           placeholder="E-mail">
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="col-md-12">

                                    <button type="submit" class="btn btn-primary btn-pill mb-4">REDEFINIR SENHA</button>

                                    <p>
                                        já tem uma conta?
                                        <a class="text-blue" href="./Login">Entrar</a>
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

