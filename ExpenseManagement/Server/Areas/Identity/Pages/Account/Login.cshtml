@page
@model LoginModel

@{
    Layout = "/Areas/Identity/Pages/_Layout.cshtml";
}

<div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh">
    <div class="d-flex flex-column justify-content-between">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-10">
                <div class="card card-default mb-0">
                    <div class="card-header pb-0">
                        <div class="app-brand w-100 d-flex justify-content-center border-bottom-0">
                            <a class="w-auto pl-0" href="/">
                                <img src="~/images/logo.png" alt="Gerênciamento de despesas">
                                <span class="brand-name text-dark">GERÊNCIA DE DESPESAS</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-body px-5 pb-5 pt-0">

                        <h4 class="text-dark mb-6 text-center">Faça Login</h4>

                        <form id="account" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-md-12 mb-4">
                                    <input asp-for="Input.Email" type="email" class="form-control input-lg" id="email" aria-describedby="emailHelp"
                                           placeholder="E-mail">
                                </div>
                                <div class="form-group col-md-12 ">
                                    <input asp-for="Input.Password" type="password" class="form-control input-lg" id="password" placeholder="Senha">
                                </div>
                                <div class="col-md-12">

                                    <div class="d-flex justify-content-between mb-3">

                                        <div class="custom-control custom-checkbox mr-3 mb-3">
                                            <input type="checkbox" class="custom-control-input" asp-for="Input.RememberMe">
                                            <label asp-for="Input.RememberMe" class="custom-control-label">Continuar conectado</label>
                                        </div>

                                        <a id="forgot-password" asp-page="./ForgotPassword" class="text-color"> Esqueceu sua senha? </a>

                                    </div>

                                    <button type="submit" class="btn btn-primary btn-pill mb-4">Entrar</button>

                                    <p>
                                        Não tem uma conta ainda?
                                        <a class="text-blue" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Inscreva-se</a>
                                        @*<a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar confirmação por e-mail</a>*@
                                    </p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
